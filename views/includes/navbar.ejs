<style>
  #btn-search {
    background-color: #fe424d;
    color: white;
    border: none;
    border-radius: 25px;
  }
  #btn-search:hover {
    background-color: #fe424d;
    color: white;
  }
  #btn-ai {
    background-color: #fe424d;
    color: white;
    border: none;
    border-radius: 25px;
    margin-left: 10px;
  }
  .search-form {
    flex-grow: 1;
    max-width: 500px;
    margin: 0 15px;
  }
</style>

<nav class="navbar navbar-expand-lg bg-body-tertiary sticky-top border-bottom">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <!-- Search Form - Centered -->
      <form class="d-flex search-form" action="/listings" method="GET">
        <input class="form-control me-2" 
               type="search" 
               name="search" 
               placeholder="Search Destination"
               value="<%= typeof search !== 'undefined' ? search : '' %>">
        <button class="btn" id="btn-search" type="submit">Search</button>
      </form>

      <!-- Right-aligned navigation items -->
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new?">Airbnb your home</a>
        <% if(!currUser) { %>
          <a class="nav-link" aria-current="page" href="/signup"><b>Signup</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %>
        <% if(currUser) { %>
          <a class="nav-link" href="/logout"><b>Log out</b></a>
          <a href="/form" class="btn" id="btn-ai">
            <i class="fas fa-robot"></i> 
            AI trip planner
          </a>
        <% } %>
      </div>
    </div>
  </div>
</nav>