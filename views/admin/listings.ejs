<%- layout('layouts/boilerplate') %>

<div class="container mt-4">
  <h2>All Listings</h2>
  <a href="/admin/dashboard" class="btn btn-secondary mb-3">Back to Dashboard</a>
  
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Owner</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% listings.forEach(listing => { %>
        <tr>
          <td><%= listing.title %></td>
          <td><%= listing.owner.username %></td>
          <td>$<%= listing.price %></td>
          <td>
            <a href="/listings/<%= listing._id %>" class="btn btn-sm btn-info">View</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>