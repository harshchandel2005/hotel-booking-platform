<%- layout('layouts/boilerplate') %>

<style>
  .form-container {
    margin-top: 100px;
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 20px;
  }
  .form-wrapper {
    max-width: 600px;
    width: 100%;
  }
</style>

<body>
  <div class="form-container">
    <div class="form-wrapper">
      <form action="/suggest-hotels" method="POST" class="bg-white p-4 p-md-5 rounded-4 shadow">
        <h2 class="text-center text-primary mb-4">Find Hotel Suggestions</h2>

        <div class="mb-3">
          <label for="destination" class="form-label fw-semibold">Destination:</label>
          <input type="text" id="destination" name="destination" class="form-control" required />
        </div>

        <div class="mb-3">
          <label class="form-label fw-semibold">Budget:</label>
          <div class="d-flex gap-2 flex-wrap">
            <div class="card p-2 flex-fill text-center border-primary budget-card" onclick="selectCard(this)">
              <input type="radio" name="budget" value="low" required class="form-check-input d-none"/>
              <label class="fw-semibold mb-0">Low</label>
            </div>
            <div class="card p-2 flex-fill text-center border-primary budget-card" onclick="selectCard(this)">
              <input type="radio" name="budget" value="medium" required class="form-check-input d-none"/>
              <label class="fw-semibold mb-0">Medium</label>
            </div>
            <div class="card p-2 flex-fill text-center border-primary budget-card" onclick="selectCard(this)">
              <input type="radio" name="budget" value="high" required class="form-check-input d-none"/>
              <label class="fw-semibold mb-0">High</label>
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label for="people" class="form-label fw-semibold">Number of People:</label>
          <input type="number" id="people" name="people" class="form-control" required min="1" />
        </div>

        <div class="mb-3">
          <label for="sourceAddress" class="form-label fw-semibold">Starting Location (Airport/City):</label>
          <input type="text" id="sourceAddress" name="sourceAddress" class="form-control" required placeholder="e.g., JFK Airport or New York City"/>
        </div>

        <div class="mb-4">
          <label class="form-label fw-semibold">Travel Party:</label>
          <div class="d-flex gap-2 flex-wrap">
            <div class="card p-2 flex-fill text-center border-primary travel-card" onclick="selectCard(this)">
              <input type="radio" name="travelParty" value="solo" required class="form-check-input d-none"/>
              <label class="fw-semibold mb-0">Solo</label>
            </div>
            <div class="card p-2 flex-fill text-center border-primary travel-card" onclick="selectCard(this)">
              <input type="radio" name="travelParty" value="couple" required class="form-check-input d-none"/>
              <label class="fw-semibold mb-0">Couple</label>
            </div>
            <div class="card p-2 flex-fill text-center border-primary travel-card" onclick="selectCard(this)">
              <input type="radio" name="travelParty" value="family" required class="form-check-input d-none"/>
              <label class="fw-semibold mb-0">Family</label>
            </div>
            <div class="card p-2 flex-fill text-center border-primary travel-card" onclick="selectCard(this)">
              <input type="radio" name="travelParty" value="friends" required class="form-check-input d-none"/>
              <label class="fw-semibold mb-0">Friends</label>
            </div>
          </div>
        </div>

        <button type="submit" class="btn btn-primary w-100 fw-bold">Get Suggestions</button>
      </form>
    </div>
  </div>

  <script>
    function selectCard(card) {
      const group = card.parentElement;
      const cards = group.querySelectorAll('.card');

      cards.forEach(c => {
        c.classList.remove('border-3', 'border-primary', 'bg-info', 'bg-opacity-10');
        c.querySelector('input[type="radio"]').checked = false;
      });

      card.classList.add('border-3', 'border-primary', 'bg-info', 'bg-opacity-10');
      card.querySelector('input[type="radio"]').checked = true;
    }
  </script>
</body>